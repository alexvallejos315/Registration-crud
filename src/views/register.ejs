<%- include('partials/header.ejs') %>

  <div class="container-fluid  ">
    <div class="row">
      <div class="col-md-7 table-dates">
        <table class="table table-dark  table-hover table-school">
          <thead>
            <tr>
              <th>NÂ°</th>
              <th>Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Address</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if(data) {%>
              <% for(var i=0;i<data.length;i++) {%>
                <tr>
                  <td>
                    <%= (i + 1) %>
                  </td>
                  <td>
                    <%= data[i].name %>
                  </td>
                  <td>
                    <%= data[i].last_name %>
                  </td>
                  <td>
                    <%= data[i].email%>
                  </td>
                  <td>
                    <%= data[i].phone%>
                  </td>
                  <td>
                    <%= data[i].address %>
                  </td>
                  <td>
                    <a href="/delete/<%=data[i].id %>" class="btn btn-danger">Delete</a>
                    <a href="/update/<%=data[i].id %>" class="btn btn-info">Update</a>
                  </td>
                </tr>
                <%} %>
                  <%} %>
          </tbody>
        </table>
      </div>
      <div class="col-md-5">
        <div class=" card-formulario border_form ">
          <div class="card-title text-center mt-3">ENTER THE DATA</div>
          <div class="card-body ">
            <form action="/add" method="POST">
              <div class="form-group">
                <label>Enter Name</label>
                <input type="text" name="name" class="form-control">
                <label>Enter Last Name</label>
                <input type="text" name="last_name" class="form-control">

                <label>Enter Email</label>
                <input type="text" name="email" class="form-control">
                <label>Enter Phone</label>
                <input type="number" name="phone" class="form-control">
                <label>Enter Address</label>
                <input type="text" name="address" class="form-control">
              </div>
              <button type="submit" class="btn btn-danger text-center">Send</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%- include('partials/footer.ejs') %>